CXXFLAGS =  -std=c++11 -O2  -I/usr/include  -I/opt/X11/include -Wall -DGL_SILENCE_DEPRECATION -Wno-return-type-c-linkage -Wno-deprecated-declarations

CCFILES= ./src/sdrPlay.cpp ./src/mThread.cpp ./src/cMalloc.cpp 
 
CCOBJS = ./src/sdrPlay.o ./src/mThread.o ./src/cMalloc.o 

fireball:  ${COBJS} ${CCOBJS}
	${CXX} ${CFLAGS} -o sdrPlay.x ${COBJS} ${CCOBJS}   -lrtaudio -lSoapySDR -lliquid -framework OpenAL
	rm ./src/sdrPlay.o ./src/mThread.o ./src/cMalloc.o 


